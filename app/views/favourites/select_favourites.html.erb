<div class="container team-index-container">
  <div class='page-title'>
    <h4 class='text-center'>Add You Favourite Players & Teams</h4>
  </div>
  <div class='nba-logo text-center'>
    <%= image_tag "nba-logo.png", alt: "NBA-logo", class: "logo-img-top"%>
  </div>
  <div class="row">
    <% @teams.each do |team| %>
      <div class="col-md-4 col-sm-12">
        <%= link_to team_path(team) do %>
          <div class="card mb-3 team-index-card">
            <%= image_tag "#{team.name} #{team.nickname}.png", class: "card-img team-card-img", alt:"team-image" %>
            <h5 class="card-title"><%= team.name %> <strong><%= team.nickname%></strong></h5>
            <p><%= team.city %>, <%= team.state %></p>
          </div>
        <% end %>
      </div>
    <% end  %>
  </div>
</div>
