<body class="team-show-body">
<%= javascript_include_tag('player_images.js') %>

  <div class="team-and-players-container">
    <div class="team-sidebar">
  <div class='team-avatar-position'>
  <%= image_tag "#{@team.name} #{@team.nickname}.png", class: "team-avatar-large", alt:"team-image" %>
  </div>
  <div class="team-details">
  <h5>ABB: <%= @team.abbrevation %></h5>
  <h5>City: <%= @team.city %></h5>
  <h5>State: <%= @team.state %></h5>
  </div>
  </div>
  <div class='players-container'>
    <div class="">
    <% @team.people.each do |person| %>
    <div class="team-player-list">

      <img src="" class="player-img" id="player_pic">



      <p><%= person.first_name[0] %>. <%= person.last_name %></p>
      <p><%= person.jersey_number %></p>
      <p><%= person.position %></p>
      <p><%= person.height %></p>

    </div>
    <% end %>
  </div>
  </div>
  </div>
</body>


