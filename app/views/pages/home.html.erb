<div class="row">
  <div class="col-8">
    <div class="row">
      <% 12.times do %>
        <div class="col-2">
          <div class="video-card">
            video here
          </div>
        </div>
      <% end %>
    </div>
    <div class="forum">
      <h3>forum here</h3>

        <div class="container index-container">
          <div class="row">
            <% if @professionals_posts.size >= 1 %>
              <% @professionals_posts.each do |favorite| %>
                <div class="col-10">
                  <%= link_to post_path(favorite.id) do %>
                    <div class="dashboard-card stretched-link">
                      <div class="card">
                        <div class="card-body">
                          <h5 class="card-title"><%= favorite.title %></h5>
                          <p class="card-text"><%= favorite.content[0...150] %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
  <div class="col-4">
    <div class="tweets-container">
      <div class="card tweets-header">
        Personalized Feed Tweets
      </div>
      <% @tweet_lists.each do |tweet_list| %>
       <% tweet_list.each do |tweet| %>
        <div class="card tweet">
          <a class="author">
            <img class="avatar" src=<%= tweet[:avatar] %> />
            <span class="name"><%= tweet[:name] %></span>
            <span class="username">@<%= tweet[:handle] %></span>
          </a>
          <div class="content" >
            <%= tweet[:text] %>

          <% unless tweet[:url].nil? %>

          <%= link_to tweet[:url], tweet[:url] %>
           <%= link_to tweet[:url] do  %>
             <img src="<%= tweet[:image] %>" alt="" style='max-width: 100%;'>
           <% end  %>

          <% end %>

          </div>
        </div>
       <% end %>
      <% end %>
    </div>
  </div>
</div>
